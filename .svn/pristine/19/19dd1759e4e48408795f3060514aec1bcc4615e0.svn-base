.hero {
  text-align: center;
  position: relative;
  color: $white;

  @include media-breakpoint-up(sm) {
    text-align: left;
  }

  &__image {
    width: 100%;
    max-width: 12rem;
  }

  &__title {
    margin: 1rem 0 0.5rem;
  }

  &__subtitle {
    margin: 0;
  }

  &__text {
    margin-top: 2rem;
  }
}

.background-gradient {
  background: linear-gradient(90deg, rgba(0, 0, 0, 1) 0%, rgba(0, 0, 0, 0) 100%);
  height: 100%;
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
}