// title
@mixin title-lg {
  font-size: 2.5rem;

  @include media-breakpoint-up(sm) {
    font-size: 3.5rem
  }
}

@mixin title-md {
  font-size: 1.8rem;

  @include media-breakpoint-up(sm) {
    font-size: 2rem
  }
}

@mixin title-sm {
  font-size: 1.4rem;

  @include media-breakpoint-up(sm) {
    font-size: 1.6rem
  }
}

// section
@mixin gradient {
  position: relative;

  &:before {
    content: "";
    background: linear-gradient(90deg, rgba(0, 0, 0, 0.75) 0%, rgba(0, 0, 0, 0) 100%);
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
  }
}